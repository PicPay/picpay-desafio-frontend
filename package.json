{
  "name": "picpay-desafio-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --aot",
    "build": "ng build",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "test": "jest --runInBand --ci",
    "updateSnapshot": "jest --updateSnapshot",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "jest": {
    "verbose": true,
    "testURL": "http://localhost/",
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.spec.json"
      }
    },
    "preset": "jest-preset-angular",
    "collectCoverage": true,
    "coverageDirectory": "dist/test-coverage",
    "collectCoverageFrom": [
      "src/app/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
      "src/libs/elements/",
      "main.ts",
      "polyfills.ts",
      "public_api.ts",
      ".module.ts",
      ".interface.ts",
      ".utils.ts",
      ".story.ts",
      "cypress/",
      "cypress/integration/payment.spec.js",
      "src/app/view/payments/components/payment-modal/components/payment-success/payment-success.component.spec.ts",
      "src/app/view/payments/components/payment-modal/components/payment-error/payment-error.component.spec.ts"
    ],
    "coverageThreshold": {
      "global": {
        "statements": 80,
        "branches": 50,
        "functions": 60,
        "lines": 80
      },
      "./**/*.ts": {
        "statements": 40,
        "branches": 0,
        "functions": 0,
        "lines": 40
      }
    },
    "testPathIgnorePatterns": [
      "<rootDir>/libs/elements",
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/libs/schematics",
      "<rootDir>/cypress",
      "<rootDir>/app/shared/components/button/button.component.ts",
      "<rootDir>/app/shared/animations",
      "src/app/view/payments/components/payment-modal/components/payment-success/payment-success.component.ts",
      "src/app/view/payments/components/payment-modal/components/payment-error/payment-error.component.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.ts"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.13",
    "@angular/cdk": "~8.2.3",
    "@angular/common": "~8.2.13",
    "@angular/compiler": "~8.2.13",
    "@angular/core": "~8.2.13",
    "@angular/forms": "~8.2.13",
    "@angular/material": "^8.2.3",
    "@angular/platform-browser": "~8.2.13",
    "@angular/platform-browser-dynamic": "~8.2.13",
    "@angular/router": "~8.2.13",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.803.18",
    "@angular/cli": "~8.3.18",
    "@angular/compiler-cli": "~8.2.13",
    "@angular/language-service": "~8.2.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.20",
    "@types/jest-axe": "^3.5.1",
    "@types/node": "~8.9.4",
    "codelyzer": "^5.0.0",
    "commitizen": "^4.2.3",
    "git-cz": "^4.7.6",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-axe": "^4.1.0",
    "jest-preset-angular": "^8.3.2",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3",
    "cypress": "^6.3.0"
  }
}
