{
  "name": "picpay-desafio-frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "initial-build": "npm i && npm run build:project",
    "build:project": "npm run build:libs && npm run build:apps",
    "build:libs": "npm run build:lib-ngx-domain && npm run build:lib-ngx-api && npm run build:lib-ngx-service && npm run build:lib-ngx-component",
    "build:apps": "npm run build:app-picpay",
    "build:app-picpay": "ng build app-picpay",
    "build-prod:app-picpay": "ng build --prod app-picpay",
    "build:lib-ngx-api": "ng build @picpay-lib/ngx-api",
    "build:lib-ngx-component": "ng build @picpay-lib/ngx-component",
    "build:lib-ngx-domain": "ng build @picpay-lib/ngx-domain",
    "build:lib-ngx-service": "ng build @picpay-lib/ngx-service",
    "test:coverage": "npm run test:coverage:libs && npm run test:coverage:apps",
    "test:coverage:libs": "npm run test:coverage:lib-ngx-domain && npm run test:coverage:lib-ngx-api && npm run test:coverage:lib-ngx-service && npm run test:coverage:lib-ngx-component",
    "test:coverage:apps": "npm run test:coverage:app-picpay",
    "test:coverage:lib-ngx-api": "ng test @picpay-lib/ngx-api --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:coverage:lib-ngx-component": "ng test @picpay-lib/ngx-component --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:coverage:lib-ngx-domain": "ng test @picpay-lib/ngx-domain --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:coverage:lib-ngx-service": "ng test @picpay-lib/ngx-service --code-coverage --watch=false --browsers=ChromeHeadless",
    "test:coverage:app-picpay": "ng test app-picpay --code-coverage --watch=false --browsers=ChromeHeadless",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postinstall": "ngcc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.10",
    "@angular/common": "~11.2.10",
    "@angular/compiler": "~11.2.10",
    "@angular/core": "~11.2.10",
    "@angular/forms": "~11.2.10",
    "@angular/platform-browser": "~11.2.10",
    "@angular/platform-browser-dynamic": "~11.2.10",
    "@angular/router": "~11.2.10",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.9",
    "@angular/cli": "~11.2.9",
    "@angular/compiler-cli": "~11.2.10",
    "@angular/language-service": "~11.2.10",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "ng-packagr": "^11.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "stylelint": "^13.12.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-config-standard": "^21.0.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "~4.1.5"
  },
  "lint-staged": {
    "*.{js,scss,css,md,ts,html}": "prettier --write",
    "*.css": "stylelint --fix",
    "*.scss": "stylelint --syntax=scss --fix",
    "*.ts": "tslint --fix"
  }
}
